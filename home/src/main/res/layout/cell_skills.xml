<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="pl.dedio.home.model.CvBlockListElement.Skills" />

        <variable
            name="adapter"
            type="pl.dedio.home.HomeAdapter" />
    </data>

    <androidx.cardview.widget.CardView style="@style/CardView.Cell">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/RootLayout.Cell">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/skillsTitle"
                style="@style/TextBlack.SectionHeader"
                android:text="@string/cell_skills_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/skillsRecycler"
                style="@style/RecyclerDefault"
                app:adapter="@{adapter}"
                app:items="@{item.skills}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/skillsTitle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>